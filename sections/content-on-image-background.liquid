<link
  rel="preload"
  href="{{ 'section-content-on-image-background.css' | asset_url }}"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'" />
<noscript>{{ 'section-content-on-image-background.css' | asset_url | stylesheet_tag }}</noscript>

<div class="content-on-image-background" style="background: {% if section.settings.background %}
  url(' {{ section.settings.background | image_url: width: " 700x" }}') center center / cover no-repeat
{% else %}
  green
{% endif %}; margin-bottom: {{ section.settings.section_bottom_margin }}">
  <div class="wrapper-padded show-on-scroll">
    <h2 class="title">
      {{ section.settings.title }}
    </h2>
    <div class="text">
      {{ section.settings.description }}
    </div>
    <a
      class="button {{ section.settings.btn_custom_class_name }}"
      target="_blank"
      href="{{ section.settings.btn_url }}">
      {{ section.settings.btn_label }}
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Content on background",
    "settings": [
      {
        "type": "image_picker",
        "id": "background",
        "label": "Background for this section"
      },
      {
        "type": "text",
        "id": "title",
        "default": "Everyone can reduce their carbon footprint by changing their habits.",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "description",
        "default": "<p>Interested in what carbon footprint you leave behind? Calculate it with our online calculator</p>",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "btn_label",
        "label": "Button Label",
        "default": "Label"
      }, 
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button URL"
      },
      {
        "type": "text",
        "id": "btn_custom_class_name",
        "label": "Button Class name",
        "info": "Please dont't change it, it is for functionality"
      },
      {
        "type": "range",
        "id": "section_bottom_margin",
        "label": "Bottom Space",
        "max": 200,
        "min": 0,
        "step": 5,
        "default": 0,
        "unit": "px"
      }
    ],
    "presets": [
      {
        "name": "Content on image background"
      }
    ]
  }
{% endschema %}