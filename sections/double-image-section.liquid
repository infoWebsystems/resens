<link
  rel="preload"
  href="{{ 'section-double-image-section.css' | asset_url }}"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'" />
<noscript>{{ 'section-double-image-section.css' | asset_url | stylesheet_tag }}</noscript>

<div class="double-image-section">
  <div class="wrapper-padded show-on-scroll">
    <h2 class="title">
      {{ section.settings.title }}
    </h2>
    <div class="grid">
      <div class="image">
        {% if section.settings.main_image %}
          <img
            class="img"
            src="{{ section.settings.main_image | image_url }}"
            alt="">
        {% else %}
          {{ 'image' | placeholder_svg_tag: "img" }}
        {% endif %}

      </div>
      <div class="aside">
        <div class="aside_image">
          {% if section.settings.secondary_image %}
            <img src="{{ section.settings.secondary_image | image_url }}" alt="">
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
          {% endif %}
        </div>
        <div class="aside_text">
          {{ section.settings.description }}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Ukrainian Development",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "THESE TINY PARTICLES AREALREADY IN THE OCEANS, AMONG THE POLLEN CARRIED BY BEES, AND IN OUR LUNGS.",
        "label": "Title"
      }, {
        "type": "image_picker",
        "id": "main_image",
        "label": "Main image"
      }, {
        "type": "image_picker",
        "id": "secondary_image",
        "label": "Secondary image"
      }, {
        "type": "text",
        "id": "description",
        "default": "A study by The University of Newcastle, commissioned by WWF, found that the average person consumes about 2,000 tiny pieces of plastic every week, or about 5 grams, which is the weight of an average credit card!",
        "label": "Description"
      }
    ]
  }
{% endschema %}