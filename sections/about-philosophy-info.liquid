<link
  rel="preload"
  href="{{ 'section-about-philosophy-info.css' | asset_url }}"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'" />
<noscript>{{ 'section-about-philosophy-info.css' | asset_url | stylesheet_tag }}</noscript>

<div class="about-philosophy-info">
  <div class="wrapper-padded show-on-scroll">
    <h2 class="title">
      {{ section.settings.title }}
    </h2>
    <h3 class="subtitle">
      {{ section.settings.sub_title }}
    </h3>
    <div class="description">
      {{ section.settings.description }}
    </div>
  </div>
</div>

