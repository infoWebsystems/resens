<link
  rel="preload"
  href="{{ 'section-logo-with-text.css' | asset_url }}"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'" />
<noscript>{{ 'section-logo-with-text.css' | asset_url | stylesheet_tag }}</noscript>

<div class="logo-with-text">
  <div class="wrapper-padded show-on-scroll">
    <div class="content">
      <div class="logo">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | image_url }}" alt="{{ section.settings.logo.alt }}">
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
      <div class="description">
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Logo with text",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "text",
        "id": "text",
        "label": "Description",
        "default": "The ancient Ukrainian traditions are being revived in the modern world through the element of the circle, taken from the Trypillian culture. It symbolizes the eternal turn of time, the values of cyclicality, life and regeneration, spirituality, harmony, as well as the unity of nature and cosmic cycles."
      }
    ]
  }
{% endschema %}